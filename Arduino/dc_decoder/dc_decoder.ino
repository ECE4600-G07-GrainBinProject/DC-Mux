void loop() {
  Serial.print("Please type 'start' with no quotations. You can type stop at any point to quit");
  
  if(Serial.available()) {
    Serial.readBytes(buffer, 5); //Read instruction
    String input = buffer; //Store the instruction
    
    if (Serial.available() == 0) {
      Serial.print("I received the command to: ");
      Serial.println(input);
        
      if (input.equals("start") == 0) {
        for(int i = 0; i < (totalRows/2); i++) { //main program runs by looping through transmiting attenae rows
          while (!(input.equals("stop"))) {
            int nRow = i; // select transmitting antenna 
            for (int nCol = 0; nCol < totalCols; nCol++) { //loop through single row of lookup table to turn the transmitting antenna on
               if (anArray[nRow][nCol] == 1) // turn the pin on:
                  digitalWrite(IOPins[nCol], HIGH);             
               else   // turn the pin off:
                  digitalWrite(IOPins[nCol], LOW); 
            }
            
            for(nRow = (totalRows/2); nRow < totalRows; nRow ++) { //loop through all rows of receivers to turn them on
              if (nRow != (i + (totalRows/2))){ //check to make sure we are not making the transmitting antenna a receiver
                for (int nCol = 0; nCol < totalCols; nCol++) { //loop through single row of lookup table
                  if (anArray[nRow][nCol] == 1) // turn the pin on:
                    digitalWrite(IOPins[nCol], HIGH);
                  else   // turn the pin off:
                    digitalWrite(IOPins[nCol], LOW);    
                }
              }
            }
                   
            if(Serial.available())   { //Check to make sure there is no new instruction from user
              Serial.readBytes(buffer, 5) ;
              String input = buffer;
            }
          }
        }
        
        if (input.equals("stop")) //Print if user has requested to stop
          Serial.print("System has received intruction to quit; Exiting Application.......");
      }
      
      else //Print if user did not type start
        Serial.print("I did not received the command to start");
    }
  }
